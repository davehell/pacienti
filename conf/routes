# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

#pacienti
GET		/pacienti															    Patients.index
GET   /pacient/{id}/upravit                     Patients.form
GET   /pacient/pridat                           Patients.form
POST  /pacient/{id}/upravit                      Patients.save
POST  /pacient/pridat                           Patients.save
GET   /pacient/{id}/detail                      Patients.detail
GET   /pacient/{id}/smazat                      Patients.delete

GET		/biomaterialy													    BioMaterials.index
GET   /pacient/{pacientId}/biomaterial/{id}/upravit BioMaterials.form
GET   /pacient/{pacientId}/biomaterial/pridat     BioMaterials.form
POST  /biomaterial/{id}/ulozit                      BioMaterials.save
POST  /biomaterial/pridat                           BioMaterials.save
#GET   /biomaterial/{id}/detail                      BioMaterials.detail
GET   /biomaterial/{id}/smazat                      BioMaterials.delete

GET		/neprovedena													    Reports.neprovedena

*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure


# Ignore favicon requests
#GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

