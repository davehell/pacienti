# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

#pacienti
GET		/pacienti															    Patients.index
GET   /pacient/{id}/upravit                     Patients.form
GET   /pacient/pridat                           Patients.form
POST  /pacient/pridat                           Patients.save
GET   /pacient/{id}/detail                      Patients.form
POST  /pacient/{id}/detail                      Patients.save
GET   /pacient/{id}/smazat                      Patients.delete

*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure


# Ignore favicon requests
#GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

